<link rel="stylesheet" href="/css/user_profile.css">

<div id="user-profile-container"> 
    <div id="user-avatar">
        <img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" >
    </div>
    
    <% if(locals.user.id == profile_user.id) { %>
    <!-- if the logged in user is viewing his/her own profile -> show the update form    -->
    <div id="update-form">
        <form action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data" method="post">
            <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required>
            <input type="text" name="email" placeholder="Your Email" value="<%= profile_user.email %>" required>
            
            <input id="file" type="file" name="avatar" placeholder="Profile Picture" >
            <input type="submit" id="submit" value="Update Details">       
        </form>
    </div>
    <% } else {%>   
    <!-- else show only the profile page -->
    <div id="details">
        <p><%= profile_user.name %></p>
        <p><%= profile_user.email %></p>
    </div>
    
    
    <!-- Toggle friendship button -->
    <div id="friend-button">
        <a class="toggle-friend-button" href="/friendships/toggle/<%= profile_user._id %>">
            <% if(friendship){ %>
                <button class="delete" type="submit">Delete Friend</button>
            <% }else { %>
                <button class="add" type="submit">Add Friend</button>
            <% } %>
            
        </a>
    </div>
    
    <% } %>
</div>



<script src="/js/toggle_friendships.js"></script>  
